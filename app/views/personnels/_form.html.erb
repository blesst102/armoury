    <%= form.label :svc_number %>
    <%= form.text_field :svc_number, class: 'form-control' %>
  </div>
</div>
  <div class="col-lg-3">
  <div class="field">
    <%= form.label :rank %>
    <%= form.text_field :rank, class: 'form-control' %>
  </div>
</div>
  <div class="col-lg-3">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
</div>
</div>
<div class="row flex-lg row">
  <div class="col-lg-3">
  <div class="field">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: 'form-control' %>
  </div>
</div>
<div class="col-lg-3">
  <div class="field">
    <%= form.label :dob %>
    <%= form.date_field :dob, class: 'form-control' %>
