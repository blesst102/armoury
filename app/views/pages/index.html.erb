
<div class="row my-3">
    <div class="module-head">
                <h3>
                    Basic Statistics</h3>
            </div>
    <%# if current_user.has_role?(:admin) %>                 
      <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-block">
                    <h4 class="card-title1">Armrequest</h4>
                    <h2><i class="fa fa-bomb fa-2x"></i></h2>
                </div>
                <div class="row px-2 no-gutters">
                    <div class="col-12">
                        <h3 class="card-title1"><%= @armreq %></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-block">
                    <h4 class="card-title1">Arms</h4>
                    <h2><i class="fa fa-bomb fa-2x"></i></h2>
                </div>
                <div class="row px-2 no-gutters">
                    <div class="col-12">
                        <h4 class="card-title1"><%= @arms %></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-block">
                <h4 class="card-title1">Arms returned</h4>
                <h2><i class="fa fa-bomb fa-2x"></i></h2>
            </div>
            <div class="row px-2 no-gutters">
                <div class="col-12">
                    <h4 class="card-title1"><%= @armretcount %></h4>
                </div>
            </div>
        </div>
    </div>
    </div>
      <div class="row flex-lg row">
        <div class="col-md-4">
        <div class="card text-center h-100 card-info">
            <div class="card-block">
                <h4 class="card-title1">Arms requests made today</h4>
                <h2><i class="fa fa-bomb fa-2x"></i></h2>
            </div>
            <div class="row p-2 no-gutters rounded">
                <div class="row px-2 no-gutters">
                <div class="col-12">
                <h4 class="card-title1"><%= @armreqtime %></h4>
                </div>
            </div>
            </div>
           </div>
           </div>
           <div class="col-md-4">
           <div class="card text-center h-100">
               <div class="card-block">
                   <h4 class="card-title1">Total Shipments</h4>
                   <h2><i class="fa fa-ship fa-2x"></i></h2>
               </div>
               <div class="row px-2 no-gutters">
                   <div class="col-12">
                       <h4 class="card-title1"><%= @shipments %></h4>
                   </div>
               </div>
           </div>
         </div>
        </div>
        <%# end %>
          <div class="module">
                    <div class="module-head">
                    <h1>Arms Returned</h1>
                    </div>
                    <div class="module-body table">
                    <%#= link_to 'New Armrequest', new_armrequest_path, class: 'btn btn-primary' %>
                    <table class="table table-striped table-responsive">
                      <thead>
                        <tr>
                          <th>Personnel</th>
                          <th>Armtype</th>
                          <th>Arm</th>
                          <th>Return Status</th>
                          <th>Request date</th>
                          <th>Return date</th>
                          <th>Personnel Image</th>
                        </tr>
                      </thead>
                    
                      <tbody>
                        <% @armret.each do |armret| %>
                          <tr>
                            <td><%= armret.personnel.name %><%= armret.personnel.level_work %></td>
                            <td><%= armret.armtype %></td>
                            <td><%= armret.arm.armname %></td>
                            <td><%= armret.return_status %></td>
                            <td><%= armret.request_date %></td>
                            <td><%= armret.updated_at %></td>
                            <td><%= image_tag armret.avatar, width: '40px' if armret.avatar.attached? %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                          
                    </div>
                  </div>

                  <p id="notice"><%= notice %></p>

<h1>Approved Request</h1>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Personnel</th>
      <th>Armtype</th>
      <th>Arm</th>
      <th>Return Status</th>
      <th>Request date</th>
      <th>Return date</th>
      <th>Personnel Image</th>
    </tr>
  </thead>

  <tbody>
    <% @approve.each do |approve| %>
      <tr>
        <td><%= approve.personnel.name %><%= armrequest.personnel.level_work %></td>
        <td><%= approve.armtype %></td>
        <td><%= approve.arm.armname %></td>
        <td><%= approve.return_status %></td>
        <td><%= approve.request_date %></td>
        <td><%= approve.return_date %></td>
        <td><%= image_tag approve.avatar, width: '40px' if armrequest.avatar.attached? %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


                







